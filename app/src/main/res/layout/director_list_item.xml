<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/cardView" android:layout_marginEnd="16dp" android:layout_marginStart="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/director_photo"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.498"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"/>
        <TextView
                android:text="Quentin Tarantino"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/director_name"
                android:textAlignment="center"
                android:textStyle="normal|bold" android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/director_photo"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@+id/director_photo" app:layout_constraintBottom_toBottomOf="@+id/director_photo"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>